{

  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react-native",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@fbn/mobile-design-system/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
